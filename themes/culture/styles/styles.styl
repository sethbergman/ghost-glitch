// post

.post-feature-image
    max-width: 860px
    width: 100%
    margin-top: 1rem
    margin-bottom: 1rem
    margin-left: auto
    margin-right: auto

.post-meta
  position: relative
  color: tertiary
  .post-tag
    margin: 0
  .post-author
    margin-top: 0.5rem
  
.post-title
  font-size: 36px
  margin-top: 0
  margin-bottom: 0.5rem

.post
  margin-top: 2rem
  img
    max-width: 100%
  p
    font-size: 18px
    line-height: 24px
  h2
    margin-top: 2rem
    font-size: 24px
  h3
    font-weight: normal
    line-height: 24px
    background-color: secondary-background
    padding: 12px
    font-size: 18px
    border-radius: 5px
    font-weight: normal
  h4
    margin-top: 2rem
    margin-bottom: 0em
    font-size: 18px    
  ul
    line-height: 30px
    font-size: 18px

.post-meta,
.post-title,
.inline-content
  display: block
  max-width: 660px
  margin-left: auto
  margin-right: auto

.post-list-title 
  display: block
  max-width: 100%
  margin-top: 1em
  font-size: 36px
  margin-bottom: 0.5rem  
  
.post
  p,
  h2,
  h3,
  h4,
  h5,
  h6,
  ul,
  ol,
  .wistia_embed,
  .wistia_responsive_padding
    max-width: 660px
    margin-left: auto
    margin-right: auto
    
  pre
    max-width: 660px !important
    margin-left: auto !important
    margin-right: auto !important

.wistia_embed
  width: 100% !important
    
.twitter-tweet,
.instagram-media
  margin-left: auto !important
  margin-right: auto !important

// post gallery

.gallery
  width: 100%
  white-space: nowrap
  overflow-x: scroll
  // ios scrolling fix
  overflow-y: scroll
  -webkit-overflow-scrolling: touch
  
  .item
    max-width: 360px
    display: inline-block
    vertical-align: top
    white-space: normal
    @media(max-width: small-viewport-width)
      max-width: 240px  
  a
    color: tertiary
  p
    font-size: 14px
    line-height: 22px
    margin: 0

.more-posts-like-this
  margin-bottom: 0

footer
  border-top: 0 !important
  padding-top: 0
  margin-top: 0
  section
    padding-top: 2rem
    border-top: 1px solid section-line
    &:first-child
      margin-top: 0

