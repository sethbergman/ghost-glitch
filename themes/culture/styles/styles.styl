.zine-container {
    position: relative;
    overflow: hidden;
    padding-top: 43%;
    max-width: 1087px;
}
.zine-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
}

body main table {
  border-collapse: collapse;
}

body main table, body main th, body main td {
  border: 1px solid #e5e5e5;
  padding: 5px;
}

@media only screen and (max-width: 575px) { 
  .page-recent .zine-items a:nth-child(3){
     display:none;
  }
  .page-recent .zine-item {
    width: 45%;
  }
}

