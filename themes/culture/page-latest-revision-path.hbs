<!doctype html>
<html lang="en">
  
<head>
    <link rel="stylesheet" type="text/css" href="//culture-zine.glitch.me/culture/styles/glitch.css">
    <link rel="stylesheet" type="text/css" href="//culture-zine.glitch.me/culture/styles/styles.css"> 
    <link rel="stylesheet" href="//cloud.webtype.com/css/3a8e55c6-b1f3-4659-99eb-125ae72bd084.css">  
</head>

<body>
  <div class="post" style="margin-top: 0px">
      {{#get "posts" limit="1" include="tags" filter="tags:revisionpath" }}
        {{#foreach posts}}
          <h2 style="margin-top: 0px">
            <a href="https://glitch.com{{url}}" target="_parent">
            {{title}} 
            </a>
          </h2>
          <iframe height="200px" width="100%" frameborder="no" class="inline-content" scrolling="no" seamless src="https://latest-podcast-episode.glitch.me/latestrp"></iframe>
          <p>
            {{excerpt}}
          </p>
        {{/foreach}}
      {{/get}} 
  </div> 
</body>